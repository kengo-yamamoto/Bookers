
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>

		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show', book_path(book.id) %></td>
				<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
				<td><%= link_to 'Destroy', book_path(book.id), method: :delete %></td>
			</tr>
		<% end %>

	</tbody>

</table>

<%= form_for(@book) do |f| %>
<h3>New book</h3>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>

<% end %>